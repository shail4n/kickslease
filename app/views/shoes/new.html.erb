<div class="login-body">
    <div class="container-form">
      <%= simple_form_for(@shoe) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :sizes %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
</div>
