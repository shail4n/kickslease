<div class="banner">
  <h1 class="title">KICKS LEASE </h1>
  <h4>Trade your kicks today</h4>
</div>
<div class="container">
  <ul class= "kicks-display">
    <%  @shoes.each do |shoe| %>
    <li class="shoe-card" >
    <%= link_to shoe_path(shoe) do  %>
      <p><%= cl_image_tag shoe.photo.key, height: 200, width: 300, crop: :fill, class:"img" %></p>
      <div class="card-text">
        <h4><%= shoe.title %></h4>
        <div class="card-desc-area">
          <p><%= shoe.description%></p>
          <p>Â£<%= shoe.price %></p>
        </div>
        <% if current_user != shoe.user %>
          <%= link_to "Book Now", new_shoe_booking_path(shoe), class: "button" %>
        <% end %>
        <% if current_user == shoe.user %>
          <%= link_to "Edit", edit_shoe_path(shoe), class: "button" %>
        <% end %>
      </div>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>
