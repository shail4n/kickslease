<div class="banner">
  <h1 class="title">KICKS LEASE </h1>
  <h4>Trade your kicks today</h4>
</div>
<div class="container">
  <ul class= "kicks-display">
    <%  @shoes.each do |shoe| %>
    <li class="shoe-card" >
    <%= link_to shoe_path(shoe) do  %>
      <p><%= cl_image_tag shoe.photo.key, height: 200, width: 300, crop: :fill, class:"img" %></p>
    <% end %>
      <div class="card-text">
        <h4><%= shoe.title %></h4>
        <div class="card-desc-area">
          <p><%= shoe.description%></p>
          <p>Â£<%= shoe.price %></p>
        </div>
        <% if current_user != shoe.user %>
          <%= link_to "Book Now", new_shoe_booking_path(shoe), class: "bbutton" %>
        <% end %>
        <% if current_user == shoe.user %>
          <%= link_to edit_shoe_path(shoe) do %>
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="black" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg>
            </div>
          <% end %>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>
  <%= render "shared/footer" %>
</div>
